#!/bin/bash

# Log output:
#
# * 51c333e  (12 d)   add vim-eunuch
#
# The time massaging regexes start with ^[^<]* because that ensures that they
# only operate before the first "<". That "<" will be the beginning of the
# author name, ensuring that we don't destroy anything in the commit message
# that looks like time.
#
# The log format uses tab characters between each field, and `column` is later
# used to split on them. A tab in the commit subject or any other field will
# break this.

HASH="%C(auto)%h%Creset"
RELATIVE_TIME="%Cgreen(%ar)%Creset"
AUTHOR="%C(bold blue)<%an>%Creset"
REFS="%C(auto)%d%Creset"
SUBJECT="%s"

FORMAT="$HASH	$RELATIVE_TIME	$REFS $SUBJECT"

# ANSI_BLACK='\033[30m'
# ANSI_BLACK_BOLD='\033[0;30;1m'
ANSI_RED='\033[31m'
# ANSI_RED_BOLD='\033[0;31;1m'
# ANSI_GREEN='\033[32m'
# ANSI_GREEN_BOLD='\033[0;32;1m'
# ANSI_YELLOW='\033[33m'
# ANSI_YELLOW_BOLD='\033[0;33;1m'
# ANSI_BLUE='\033[34m'
# ANSI_BLUE_BOLD='\033[0;34;1m'
# ANSI_MAGENTA='\033[35m'
# ANSI_MAGENTA_BOLD='\033[0;35;1m'
# ANSI_CYAN='\033[36m'
# ANSI_CYAN_BOLD='\033[0;36;1m'
# ANSI_WHITE='\033[37m'
# ANSI_WHITE_BOLD='\033[0;37;1m'
ANSI_RESET='\033[0m'

LESSOPTS="--quit-if-one-screen --no-init --RAW-CONTROL-CHARS --chop-long-lines"

git_show_head() {
    HEADER=`GIT_NO_PAGER=1 git_pretty_log -1 --color=always`
    BODY=`git show -p --pretty="tformat:" --color=always`
    echo "$HEADER\n$BODY" |
        less $LESSOPTS 
}

git_pretty_log() {
    git log --color=always --graph --pretty="tformat:${FORMAT}" $* |
        # Replace (2 years ago) with (2 years)
        sed -Ee 's/(^[^<]*) ago\)/\1)/' |
        # Replace (2 years, 5 months) with (2 years)
        sed -Ee 's/(^[^<]*), [[:digit:]]+ .*months?\)/\1)/' |
	# Replace (years) with (y)
	sed -Ee 's/years/y/' |
	# Replace (hours) with (h)
	sed -Ee 's/hours/h/' |
	# Replace (minutes) with (m)
	sed -Ee 's/minutes/m/' |
	# Replace (seconds) with (s)
	sed -Ee 's/seconds/s/' |
        # Line columns up based on \t delimiter
        column -s '	' -t |	
        # Color merge commits specially
        sed -Ee "s/(Merge (branch|remote-tracking branch|pull request) .*$)/$(printf $ANSI_RED)\1$(printf $ANSI_RESET)/" |
        # Page only if we're asked to.
        if [ -n "$GIT_NO_PAGER" ]; then
            cat
        else
            # Page only if needed.
            less $LESSOPTS
        fi
}

